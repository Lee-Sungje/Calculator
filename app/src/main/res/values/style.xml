<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_customstyle.primaryColor" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="button_customstyle.secondaryColor" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

</resources>